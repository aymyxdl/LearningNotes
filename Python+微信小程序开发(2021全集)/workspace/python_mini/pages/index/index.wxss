/**index.wxss**/
.container {
  height: 100%;
}

.wrap {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.wrap .title {
  font-size: 50rpx;
  font-weight: bold;
}

.wrap .tips {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #333;
  margin: 8rpx 0;
}

.mainImg image {
  width: 100%;
  height: 400rpx;
}

.imgContainer {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
}

.imgContainer image {
  height: 100rpx;
  width: 100rpx;
  margin-right: 6rpx;
}